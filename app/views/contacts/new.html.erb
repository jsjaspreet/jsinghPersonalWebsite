<% provide(:title, 'Contact') %>

<div class="container">
  <div class="jumbotron">
   <div class="row">
     <div class="col-md-6 text-center">
       <h2 class="vollkron">Social Media</h2>
         <div class="row">
           <div class="col-sm-4"></div>
           <div class="col-sm-2"> <a href="https://twitter.com/jaspreet_js" target="_blank"><%= image_tag '/social-icons/twitter.png' %></a></div>
           <div class="col-sm-2"> <a href="https://www.linkedin.com/pub/jaspreet-singh/39/a63/437" target="_blank"><%= image_tag '/social-icons/linkedin.png' %></a></div>
           <div class="col-sm-4"></div>
         </div>
     </div>

         <div class="col-md-6">
              <h2 class="vollkron text-center"><a href="mailto:jsjaspreet@berkeley.edu" target="_top"><div id="email">jsjaspreet@berkeley.edu</div></a></h2>
              <%= simple_form_for @contact, html: { class: 'form-group' } do |f| %>
                  <%= f.input :name, label: 'Name', input_html: { class: 'form-control' }, :required => true %>
                  <%= f.input :email, label: 'Email', input_html: { class: 'form-control' }, :required => true %>
                  <%= f.input :message,label: 'Message', input_html: { rows: 10, class: 'form-control' }, :as => :text, :required => true %>
                  <div class= "hidden">
                    <%= f.input :nickname, :hint => 'Leave this field blank!' %>
                  </div>
                  <div class="text-center">
                    </br>
                    <%= f.button :submit, 'Send message', :class=> "btn btn-lg btn-primary" %>
                  </div>
              <% end %>
     </div>
   </div>
  </div>
</div>
